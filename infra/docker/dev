FROM mhart/alpine-node:8

RUN apk update
RUN apk add nginx gettext

# Node Env
RUN npm install forever --global

# NGINX Conf
RUN rm /etc/nginx/conf.d/default.conf
COPY infra/nginx/gauntface-shared.conf /etc/nginx/gauntface-shared.tmpl
COPY infra/nginx/gauntface-development.conf /etc/nginx/conf.d/gauntface.tmpl

# Startup Script
COPY infra/docker/startup.sh /gauntface/docker/startup.sh
RUN chmod +x /gauntface/docker/startup.sh
CMD ["/gauntface/docker/startup.sh"]
